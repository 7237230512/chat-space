.chat-part
  .chat-body
    .chat-body__name
      =message.user.name
    .chat-body__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message
    - if message.content.present?
      %p.message__content
        = message.content
    = image_tag message.image.url, class: 'image__message' if message.image.present?
